<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Guide - Helpdesk</title>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="createGuideContainer">
      <h1>Create New Guide</h1>
      <form action="/createGuide" method="POST" enctype="multipart/form-data">
        <div>
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" required />
        </div>
        <div>
          <label for="tag">Tag:</label>
          <input type="text" id="tag" name="tag" required />
        </div>
        <div id="sections">
          <div class="section">
            <h3>Section 1</h3>
            <label for="overskrift0">Heading:</label>
            <input type="text" name="overskrift[]" required />
            <label for="beskrivelse0">Description:</label>
            <textarea name="beskrivelse[]" required></textarea>
            <label for="bilde0">Image:</label>
            <input type="file" name="bilde" accept="image/*" />
          </div>
        </div>
        <button type="button" onclick="addSection()">Add Section</button>
        <button type="submit">Create Guide</button>
      </form>
    </div>

    <script>
      let sectionCount = 1;
      function addSection() {
        sectionCount++;
        const newSection = document.createElement("div");
        newSection.className = "section";
        newSection.innerHTML = `
          <h3>Section ${sectionCount}</h3>
          <label for="overskrift${sectionCount - 1}">Heading:</label>
          <input type="text" name="overskrift[]" required>
          <label for="beskrivelse${sectionCount - 1}">Description:</label>
          <textarea name="beskrivelse[]" required></textarea>
          <label for="bilde${sectionCount - 1}">Image:</label>
          <input type="file" name="bilde" accept="image/*">
        `;
        document.getElementById("sections").appendChild(newSection);
      }
    </script>
  </body>
</html>
