<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= guide.tittel %> - Helpdesk</title>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="guideContainer">
      <aside class="sideNav">
        <h2>Sections</h2>
        <ul>
          <% guide.overskrift.forEach((title, index) => { %>
          <li>
            <a href="#section<%= index %>"><%= title %></a>
          </li>
          <% }) %>
        </ul>
      </aside>

      <main class="guideContent">
        <h1><%= guide.tittel %></h1>
        <p class="guideTag"><strong>Tag:</strong> <%= guide.tag %></p>

        <% guide.overskrift.forEach((title, index) => { %>
        <section id="section<%= index %>">
          <h2><%= title %></h2>
          <p><%= guide.beskrivelse[index] %></p>
          <% if (guide.bilde[index]) { %>
          <img
            src="/uploads/<%= guide.bilde[index] %>"
            alt="Section Image"
            class="sectionImage"
          />
          <% } %>
        </section>
        <% }) %>
      </main>
    </div>

    <div class="backToHome">
      <a href="/">Back to All Guides</a>
    </div>
  </body>
</html>
