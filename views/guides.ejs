<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guides</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="gridContainer">
      <!-- Sidebar with Guide Links -->
      <div class="aside">
        <div class="sideNav">
          <ul id="sideNavGrid">
            <% if (guides && guides.length > 0) { %> <% guides.forEach((guide,
            index) => { %>
            <li>
              <button
                onclick="document.getElementById('guide<%= index + 1 %>').scrollIntoView({ behavior: 'smooth' });"
              >
                Guide <%= index + 1 %>
              </button>
            </li>
            <% }) %> <% } else { %>
            <li>No guides available.</li>
            <% } %>
          </ul>
        </div>
      </div>

      <main class="mainContainer">
        <ul>
          <% guides.forEach((guide, index) => { %>
          <li class="guides" id="guide<%= index + 1 %>">
            <h1><%= guide.tittel %></h1>
            <p><strong>Tag:</strong> <%= guide.tag %></p>

            <div class="sectionsContainer">
              <% for (let i = 0; i < guide.overskrift.length; i++) { %>
              <div class="sectionItem">
                <h2>Section <%= i + 1 %>: <%= guide.overskrift[i] %></h2>
                <p><%= guide.beskrivelse[i] %></p>

                <% if (guide.bilde[i]) { %>
                <img
                  src="/uploads/<%= guide.bilde[i] %>"
                  alt="Section Image"
                  class="sectionImage"
                />
                <% } %>
              </div>
              <% } %>
            </div>
          </li>
          <% }) %>
        </ul>
      </main>
    </div>
  </body>
</html>
