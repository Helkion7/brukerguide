<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,500,0,0&icon_names=home"
/>
<link rel="stylesheet" href="/css/nav.css" />

<section id="header">
  <nav>
    <div id="navBar">
      <ul>
        <li>
          <a href="/">
            <span class="material-symbols-outlined">home</span>
          </a>
        </li>

        <!-- Dashboard button, styled like authButton -->
        <% if (locals.user) { %>
        <li>
          <a href="/dashboard" class="authButton">Dashboard</a>
        </li>
        <% } %>

        <li>
          <% if (locals.user) { %>
          <form class="logoutForm" action="/logout" method="POST">
            <button type="submit" class="authButton">
              Logout
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="24px"
                viewBox="0 -960 960 960"
                width="24px"
                fill="#e8eaed"
              >
                <path
                  d="M202.87-111.87q-37.78 0-64.39-26.61t-26.61-64.39v-554.26q0-37.78 26.61-64.39t64.39-26.61h279.04v91H202.87v554.26h279.04v91H202.87Zm434.02-156.65L574-333.93 674.56-434.5H358.09v-91h316.47L574-626.07l62.89-65.41L848.13-480 636.89-268.52Z"
                />
              </svg>
            </button>
          </form>
          <% } else { %>
          <a href="/login" class="authButton"
            >Login
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="24px"
              viewBox="0 -960 960 960"
              width="24px"
              fill="#e8eaed"
            >
              <path
                d="M478.09-111.87v-91h279.04v-554.26H478.09v-91h279.04q37.78 0 64.39 26.61t26.61 64.39v554.26q0 37.78-26.61 64.39t-64.39 26.61H478.09Zm-87.42-156.65-62.89-65.41L428.35-434.5H111.87v-91h316.48L327.78-626.07l62.89-65.41L601.91-480 390.67-268.52Z"
              />
            </svg>
          </a>
          <% } %>
        </li>
      </ul>
    </div>
  </nav>
</section>
