<link rel="stylesheet" href="/css/nav.css" />
<style>
  .authButton {
    background-color: #4caf50;
    border: none;
    color: white;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 5px;
    transition: backgroundColor 0.3s;
  }

  .authButton:hover {
    background-color: #45a049;
  }

  .logoutForm {
    display: inline;
  }
</style>

<section id="header">
  <nav>
    <div id="navBar">
      <ul>
        <li>
          <a href="/">
            <img style="width: 50px" src="/img/geiran.JPG" alt="" />
          </a>
        </li>
        <li>
          <% if (locals.user) { %>
          <form class="logoutForm" action="/logout" method="POST">
            <button type="submit" class="authButton">Logout</button>
          </form>
          <% } else { %>
          <a href="/login" class="authButton">Login</a>
          <% } %>
        </li>
      </ul>
    </div>
  </nav>
</section>
